<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.mypackage.SubscribeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_package_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/black"
        android:text="Free Package" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_package_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_package_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_10sdp"

        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        android:text="Its free, lets get started"
        ></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_package_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_5sdp"

        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        android:text="Price Â£0.0"
        ></androidx.appcompat.widget.AppCompatTextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="#f0f0f0"
        app:layout_constraintTop_toBottomOf="@id/tv_price"></View>

</androidx.constraintlayout.widget.ConstraintLayout>