<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyEditAddressActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"></androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_billingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Billing Address"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintLeft_toRightOf="@id/back_arrow"></androidx.appcompat.widget.AppCompatTextView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_billingAddress">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Country/Region*">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_countryregion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_country"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:hint="Enter country">

        </androidx.appcompat.widget.AppCompatEditText>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_countryregion"></View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_streetaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Street Address">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_streetaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_streetaddress"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:hint="Street Address">

        </androidx.appcompat.widget.AppCompatEditText>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_streetaddress"></View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view2"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Town/City">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_towncity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_town"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:hint="Enter town/city">

        </androidx.appcompat.widget.AppCompatEditText>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_towncity"></View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_countryopt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view4"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Country(optional)">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_countryopt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:hint="Enter country">

        </androidx.appcompat.widget.AppCompatEditText>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_country"></View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_postcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view5"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Post code">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_postcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_postcode"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:hint="Enter postcode">

        </androidx.appcompat.widget.AppCompatEditText>

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_postcode"></View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Email">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:hint="Enter email">

        </androidx.appcompat.widget.AppCompatEditText>

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_email"></View>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_phonenum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view8"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:text="Phone Number">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_phonrnumbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_phonenum"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:textColor="#787878"
        android:textSize="@dimen/_12sdp"
        android:background="@android:color/transparent"
        android:inputType="numberDecimal"
        android:hint="Enter Phone number">

    </androidx.appcompat.widget.AppCompatEditText>

    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#efa5c6"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/et_phonrnumbr"></View>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9"
           android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/rounded_shape_submit"
            android:text="Save Address"
            android:textSize="@dimen/_15sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"></androidx.appcompat.widget.AppCompatButton>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>