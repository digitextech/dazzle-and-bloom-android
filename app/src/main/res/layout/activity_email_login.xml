<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EmailLoginActivity"
    android:background="@color/pink_1"
    >

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btn_skip"
     android:layout_width="wrap_content"
     android:layout_height="@dimen/_25sdp"
     android:background="@drawable/rounded_shape"
     android:layout_marginTop="@dimen/_15sdp"
     app:layout_constraintTop_toTopOf="parent"
     android:text="SKIP NOW"
     android:textColor="@color/black"
     android:layout_marginRight="@dimen/_15sdp"
     android:textSize="@dimen/_9sdp"
     android:paddingLeft="@dimen/_5sdp"
     android:paddingRight="@dimen/_5sdp"
     app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>
    
 <androidx.appcompat.widget.AppCompatTextView
     android:id="@+id/tv_dazzle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@id/btn_skip"
     android:layout_marginTop="@dimen/_12sdp"
     android:text="DAZZLE\n&amp; BLOOM"
     android:textAllCaps="true"
     android:textSize="@dimen/_16sdp"
     android:visibility="visible"
     android:textColor="@color/white"/>
 <androidx.appcompat.widget.AppCompatTextView
     android:id="@+id/tv_bloom"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@id/tv_dazzle"
     android:text="&amp;BLOOM"
     android:textAllCaps="true"
     android:visibility="invisible"
     android:textSize="@dimen/_16sdp"
     android:textColor="@color/white"></androidx.appcompat.widget.AppCompatTextView>

 <androidx.appcompat.widget.AppCompatTextView
     android:id="@+id/tv_welcome"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@id/tv_bloom"
     android:text="Welcome To Dazzle And Bloom"
     android:textSize="@dimen/_16sdp"
     android:textColor="@color/white"
     android:layout_marginTop="@dimen/_30sdp"
     ></androidx.appcompat.widget.AppCompatTextView>

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btn_continue_email"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@drawable/rounded_shape"
     android:layout_marginTop="@dimen/_55sdp"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintLeft_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
     android:text="Continue with email"
     android:textColor="@color/black"
     android:textAllCaps="false"
     android:layout_marginRight="@dimen/_20sdp"
     android:layout_marginLeft="@dimen/_20sdp"
     app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>
 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/btn_continue_mobile"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:background="@drawable/rounded_shape"
     android:layout_marginTop="@dimen/_25sdp"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintLeft_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/btn_continue_email"
     android:text="Continue with Mobile number"
     android:textColor="@color/black"
     android:textAllCaps="false"
     android:layout_marginRight="@dimen/_20sdp"
     android:layout_marginLeft="@dimen/_20sdp"
     app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatButton>

 <androidx.appcompat.widget.AppCompatTextView
     android:id="@+id/tv_signup"
     android:layout_width="wrap_content"
     android:layout_height="@dimen/_25sdp"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintTop_toBottomOf="@id/btn_continue_mobile"
     android:text="Don't have an account? Sign up"
     android:gravity="center"
     android:textSize="@dimen/_11sdp"
     android:textColor="@color/white"
     android:layout_marginTop="@dimen/_40sdp"></androidx.appcompat.widget.AppCompatTextView>

</androidx.constraintlayout.widget.ConstraintLayout>