<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_cross"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/ic_cross"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"></androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Reset All"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/pink_1"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_15sdp"></androidx.appcompat.widget.AppCompatTextView>

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/tvfilter"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="@dimen/_12sdp"
       android:gravity="center"
       android:textColor="@color/black"
       app:layout_constraintTop_toBottomOf="@id/img_cross"
       android:text="Filter"></androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvfilter"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:textColor="@color/black"
        android:text="Price"></androidx.appcompat.widget.AppCompatTextView>

    <!--<org.florescu.android.rangeseekbar.RangeSeekBar
        android:id="@+id/rangeseekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        rsb:absoluteMaxValue="4900"
        rsb:absoluteMinValue="0"
        rsb:step="10"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvprice"/>-->

    <LinearLayout
        android:id="@+id/seekbarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_70sdp"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvprice">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:visibility="visible"
           >

            <com.yahoo.mobile.client.android.util.rangeseekbar.RangeSeekBar
                android:id="@+id/rangeseekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:absoluteMaxValue="10000"
                app:absoluteMinValue="0"


                />

            <com.crystal.crystalrangeseekbar.widgets.BubbleThumbRangeSeekbar
            android:id="@+id/PriceRangeSeekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            app:bar_color="#dddddd"
            app:bar_highlight_color="@color/primary_pink"
            app:corner_radius="1"
            app:data_type="_integer"
            app:left_thumb_color="@color/grey"
            app:right_thumb_color="@color/grey"
                android:visibility="gone"
            app:steps="5" />
            <TextView
                android:id="@+id/textMin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@id/rangeseekbar"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textSize="11dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/textMax1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000"
                android:layout_below="@id/rangeseekbar"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:textSize="11dp"
                android:textColor="#000"
                android:layout_alignParentRight="true"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textMax1"

                android:layout_marginTop="@dimen/_7sdp"

                android:gravity="center"
                android:text="Seller Location"
                android:textColor="@color/black"

                android:textSize="@dimen/_12sdp"
                app:layout_constraintLeft_toLeftOf="parent"></androidx.appcompat.widget.AppCompatTextView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reclocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvlocation"

                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_44sdp"
                >

            </androidx.recyclerview.widget.RecyclerView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_update"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/rounded_shape_submit"
                android:gravity="center"
                android:text="Update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp">

            </androidx.appcompat.widget.AppCompatButton>

        </RelativeLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>