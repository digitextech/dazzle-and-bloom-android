                    android:layout_marginRight="@dimen/_10sdp"
                    app:layout_constraintHorizontal_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_facebooklink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#949494"
                        android:textSize="@dimen/_12sdp"

                        android:text="Facebook page Link">

                    </androidx.appcompat.widget.AppCompatTextView>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_facebook"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/tv_facebooklink"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_4sdp"
                        android:background="@drawable/rounded_corner_social_media"></androidx.appcompat.widget.AppCompatEditText>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_twitter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/rl_fb"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:layout_constraintHorizontal_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_twitterlink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#949494"
                        android:textSize="@dimen/_12sdp"

                        android:text="Twitter Profile Link">

                    </androidx.appcompat.widget.AppCompatTextView>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/et_twitter"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@+id/tv_twitterlink"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:padding="@dimen/_4sdp"
                        android:background="@drawable/rounded_corner_social_media"></androidx.appcompat.widget.AppCompatEditText>


                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
