                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/ic_down_arrow"
                app:layout_constraintTop_toBottomOf="@+id/tv_listingtype"
                app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatImageView>
