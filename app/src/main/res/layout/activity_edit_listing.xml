<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CreateListingActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"></androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_create_new_listing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Create New Listing"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintLeft_toRightOf="@id/back_arrow"></androidx.appcompat.widget.AppCompatTextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tv_create_new_listing">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:paddingBottom="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_60sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="#fce8f1"
                android:text="Details"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_details"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                android:text="Title">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_6sdp"
                android:textColor="#787878"
                android:textSize="@dimen/_12sdp"
                android:background="@android:color/transparent"
                android:hint="Title here">

            </androidx.appcompat.widget.AppCompatEditText>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#efa5c6"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/et_title"></View>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_listing_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                android:text="Listing Tag">


            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_select_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select listing tag "
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintBottom_toTopOf="@id/view2"
                app:layout_constraintTop_toBottomOf="@+id/tv_listing_tag"></androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_dropdow"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/ic_down_arrow"
                app:layout_constraintTop_toBottomOf="@+id/tv_listing_tag"
                app:layout_constraintRight_toRightOf="parent"></androidx.appcompat.widget.AppCompatImageView>
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#efa5c6"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/tv_select_tag"></View>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_7sdp"
                android:textSize="@dimen/_12sdp"
                android:text="Categories">


            </androidx.appcompat.widget.AppCompatTextView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_categories"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_categories">

                <AutoCompleteTextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:hint="Select Category"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <!--<androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/tv_category_tag"
                android:layout_width="wrap_content"
