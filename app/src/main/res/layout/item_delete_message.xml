<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_copy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Copy"
        android:layout_marginRight="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_11sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="#797979"></androidx.appcompat.widget.AppCompatTextView>


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_copy"
        android:background="#f2f2f2"></View>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintRight_toLeftOf="parent"
         app:layout_constraintTop_toBottomOf="@id/view1"
        android:text="Delete"
        android:layout_marginRight="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_11sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="#797979"></androidx.appcompat.widget.AppCompatTextView>


    <View
        android:id="@+id/viewe2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delete"
        android:background="#f2f2f2"></View>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewe2"
        android:text="Cancel"
        android:layout_marginRight="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/_11sdp"
        android:textSize="@dimen/_13sdp"
        android:textColor="#797979"></androidx.appcompat.widget.AppCompatTextView>


    <View
        android:id="@+id/viewe3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#f2f2f2"></View>
</androidx.constraintlayout.widget.ConstraintLayout>