<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListDetailsActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_arrow"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent">

    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Its free, lets get started"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"

        app:layout_constraintLeft_toRightOf="@id/back_arrow"></androidx.appcompat.widget.AppCompatTextView>


    <androidx.cardview.widget.CardView
        android:id="@+id/_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_list_title"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        app:cardBackgroundColor="#f5f5f5"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_30sdp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_margin="@dimen/_18sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Free"></TextView>

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img_thik1"
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   app:layout_constraintLeft_toLeftOf="parent"
                   android:layout_marginLeft="@dimen/_75sdp"
                   android:layout_marginTop="@dimen/_20sdp"
                   android:background="@drawable/ic_plus_in_circle"
                   app:layout_constraintTop_toBottomOf="@id/tv_free"></androidx.appcompat.widget.AppCompatImageView>

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/tv_feature"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/tv_free"
               app:layout_constraintLeft_toRightOf="@id/img_thik1"
               android:text="Featured"
               android:textColor="#797979"
               android:textSize="@dimen/_15sdp"
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginLeft="@dimen/_15sdp">

           </androidx.appcompat.widget.AppCompatTextView>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_feature"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="#e7e5e6"></View>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_thik2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_plus_in_circle"
                app:layout_constraintTop_toBottomOf="@id/view1"></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_image_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintLeft_toRightOf="@id/img_thik2"
                android:text="Upto 8 images"
                android:textColor="#797979"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp">

            </androidx.appcompat.widget.AppCompatTextView>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_image_feature"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="#e7e5e6"></View>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_thik3"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_plus_in_circle"
                app:layout_constraintTop_toBottomOf="@id/view2"></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_one_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view2"
                app:layout_constraintLeft_toRightOf="@id/img_thik3"
                android:text="1 video"
                android:textColor="#797979"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp">

            </androidx.appcompat.widget.AppCompatTextView>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_one_video"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="#e7e5e6"></View>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_thik4"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_plus_in_circle"
                app:layout_constraintTop_toBottomOf="@id/view3"></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_list_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view3"
                app:layout_constraintLeft_toRightOf="@id/img_thik4"
                android:text="List until sold"
                android:textColor="#797979"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp">

            </androidx.appcompat.widget.AppCompatTextView>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_list_sold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="#e7e5e6"></View>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_thik6"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_75sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_plus_in_circle"
                app:layout_constraintTop_toBottomOf="@id/view5"></androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_nohiddencost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view5"
                app:layout_constraintLeft_toRightOf="@id/img_thik6"
                android:text="No hidden cost"
                android:textColor="#797979"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp">

            </androidx.appcompat.widget.AppCompatTextView>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nohiddencost"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="#e7e5e6"></View>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sub_packagelist"
        app:layout_constraintTop_toBottomOf="@id/_card"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/_13sdp"
        android:background="@drawable/rounded_shape_submit_listing"
        app:layout_constraintLeft_toLeftOf="parent"></androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>