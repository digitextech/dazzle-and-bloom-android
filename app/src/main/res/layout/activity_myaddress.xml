<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"></androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="My Address"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        app:layout_constraintLeft_toRightOf="@id/back_arrow"></androidx.appcompat.widget.AppCompatTextView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_address"

        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="The following addresses will be used on the checkout page by default."
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="#fe6fa4"
        android:paddingLeft="@dimen/_19sdp"
        android:textSize="@dimen/_12sdp"></androidx.appcompat.widget.AppCompatTextView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_billing_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_following"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:text="Billing Address"></androidx.appcompat.widget.AppCompatTextView>
   <TextView
       android:id="@+id/tv_addedit_billing"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="@dimen/_15sdp"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginTop="@dimen/_15sdp"
       android:textSize="@dimen/_13sdp"
       android:text="Add/Edit"
       app:layout_constraintTop_toBottomOf="@id/tv_following"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_billingaddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_addedit_billing"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"

        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user_billing_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="172 Langley Road.\n Slough \n uk \n SL37EE"
            android:padding="@dimen/_15sdp"></androidx.appcompat.widget.AppCompatTextView>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_shipping_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/card_billingaddress"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:text="Shipping Address"></androidx.appcompat.widget.AppCompatTextView>
    <TextView
        android:id="@+id/tv_addedit_shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_15sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_13sdp"
        android:text="Add/Edit"
        app:layout_constraintTop_toBottomOf="@id/card_billingaddress"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_shippingaddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_addedit_shipping"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"

        android:background="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_user_shipping_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="172 Langley Road.\n Slough \n uk \n SL37EE"
            android:padding="@dimen/_15sdp"></androidx.appcompat.widget.AppCompatTextView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>