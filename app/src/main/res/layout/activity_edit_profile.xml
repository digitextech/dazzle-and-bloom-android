<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EditProfileActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/_7sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ic_cross"></androidx.appcompat.widget.AppCompatImageView>

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tv_tupadte"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_margin="@dimen/_7sdp"
    android:textColor="@color/black"
    android:textSize="@dimen/_12sdp"
    android:text="Update">
</androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEditprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Edit Profile"
        android:gravity="center"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_tupadte"></androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tvEditprofile"></androidx.appcompat.widget.AppCompatImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/img_profile">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="First Name">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_fname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:hint="Enter First name">

        </androidx.appcompat.widget.AppCompatEditText>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_fname"></View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Last Name">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_lname"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:hint="Enter Last name">

        </androidx.appcompat.widget.AppCompatEditText>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_lname"></View>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/view2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Nick name">

        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_uname"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_6sdp"
        android:textColor="#787878"
        android:textSize="@dimen/_12sdp"
        android:background="@android:color/transparent"
        android:hint="Enter your nick name">

    </androidx.appcompat.widget.AppCompatEditText>



    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#efa5c6"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@id/et_uname"></View>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view4"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Phone Number">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_phonrnumbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_phonenum"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:hint="Enter Phone number">

        </androidx.appcompat.widget.AppCompatEditText>
        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_phonrnumbr"></View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view5"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="Whatsapp Number">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_whatphonrnumbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_whatsapp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:hint="Enter whatsapp number">

        </androidx.appcompat.widget.AppCompatEditText>






        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#efa5c6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/et_whatphonrnumbr"></View>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view6"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:text="E-mail(required)">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#787878"
            android:textSize="@dimen/_12sdp"
            android:background="@android:color/transparent"
            android:hint="Enter Email">

        </androidx.appcompat.widget.AppCompatEditText>

